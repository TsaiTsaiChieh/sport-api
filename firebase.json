{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/auth/**",
        "function": "auth"
      },
      {
        "source": "/auth",
        "function": "auth"
      },
      {
        "source": "/index",
        "function": "index"
      },
      {
        "source": "/sports",
        "function": "sports"
      },
      {
        "source": "/sports/**",
        "function": "sports"
      },
      {
        "source": "/messages",
        "function": "messages"
      },
      {
        "source": "/messages/**",
        "function": "messages"
      },
      {
        "source": "/",
        "function": "index"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
