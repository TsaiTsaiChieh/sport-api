{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
      "rewrites": [
        {
          "source": "/",
          "function": "index"
        },
        {
          "source": "/index",
          "function": "index"
        },
		{
          "source": "/sports",
          "function": "sports"
		},
		{
          "source": "/sports",
          "function": "sports"
		}
		
      ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
