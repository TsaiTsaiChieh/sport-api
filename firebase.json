{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "site": "api-dosports",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
